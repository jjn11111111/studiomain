
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // The video files are stored in a path that is publicly readable.
    // This rule allows anyone to read files, which is necessary for the video streaming.
    // It denies write access to prevent unauthorized uploads.
    match /{allPaths=**} {
      allow read;
      allow write: if false;
    }
  }
}
