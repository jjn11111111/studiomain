{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // ðŸ‘‡ THESE TWO LINES ARE CRUCIAL
    "paths": {
      "@/*": ["./*"],
      // THIS LINE IS THE FIX: Maps @/lib/* directly to the root lib folder
      "@/lib/*": ["./lib/*"] 
    }
      // If 'lib' is inside the 'app' directory, use this:
      "@/lib/*": ["./app/lib/*"]
      // If 'lib' is in the project root, use this:
      // "@/lib/*": ["./lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
