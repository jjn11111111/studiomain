{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // ðŸ‘‡ THESE TWO LINES ARE CRUCIAL
    "baseUrl": ".", 
    "paths": {
      // The '@/lib/*' alias must map to where your 'lib' folder actually is.
      // If 'lib' is inside the 'app' directory, use this:
      // In tsconfig.json (Lines 22-25)
"paths": {
  "@/lib/*": ["./lib/*"] // CHANGE THIS LINE
}
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
