
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Journal Entries:
    // - Anyone can read public entries.
    // - Authenticated users can read their own private entries.
    // - Authenticated users can create entries for themselves.
    match /journalEntries/{entryId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false; // Disallow updates and deletes for now
    }

    // Community Posts:
    // - Anyone can read all posts.
    // - Authenticated users can create posts.
    match /communityPosts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false; // Disallow updates and deletes
    }

    // Users collection:
    // - Users can read their own user document.
    // - Users cannot write to their own document (managed by server).
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if false;
    }
  }
}
